html
    head
        title="Form con PUG"
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js'
                integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa'
                crossorigin="anonymous"
                )
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
             rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
             crossorigin="anonymous"
        )
        title="Formulario con Pug"
    body
       div(class="container")
            form(method="POST" action="http://localhost:8080/productos")
                div(class="form-group")
                    label(for="nombre")="Nombre producto:"
                    input( type="text" class="form-control" required="required" name="nombre" placeholder="Nombre")
                div(class="form-group")
                    label(for="precio")="Precio:"
                    input( type="number" class="form-control" required="required" name="precio" placeholder="Precio")
                div(class="form-group")
                    label(for="descripcion")="Descripcion:"
                    input( type="text" class="form-control" required="required" name="descripcion" placeholder="Descripcion")
                br
                button(type="submit" class="btn btn-primary" href="/productos")="Agregar producto"
           
